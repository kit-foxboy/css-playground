{
  "name": "css-playground",
  "version": "1.0.0",
  "description": "Just a place to experiment with SASS/CSS",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/styles.css -w",
    
    "compile:sass": "node-sass sass/main.scss css/styles.comp.css",
    "concat:css": "concat -o css/styles.concat.css css/icon-font.css css/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/styles.concat.css -o css/styles.prefix.css",
    "compress:css": "node-sass css/styles.prefix.css css/styles.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kit-foxboy/css-playground.git"
  },
  "author": "Geoff \"Kit Foxboy\" Lambert",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kit-foxboy/css-playground/issues"
  },
  "homepage": "https://github.com/kit-foxboy/css-playground#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "concat": "^1.0.3",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
